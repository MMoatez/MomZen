{% extends 'basefront.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
         
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
       
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ user.numTel }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ user.genre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr>
        </tbody>
    </table>
<a href="{{ path('app_user_edit_profile', {'id': app.user.id}) }}">edit</a>

   
{% endblock %}
