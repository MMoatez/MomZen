{# Include necessary libraries for Select2 and DatePicker #}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

<div class="form-container">
    <div class="card">
        <div class="card-body">
            <h2 class="form-title"> Rendez-vous</h2>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <!-- Date Field -->
                <div class="form-group">
                    {{ form_label(form.date, 'Date du rendez-vous') }}
                    <div class="input-icon">
                        {{ form_widget(form.date, {
    'attr': {
        'class': 'form-control date-picker',
    }
}) }}

                        <i class="fa fa-calendar icon"></i>
                    </div>
                    <div class="form-error">{{ form_errors(form.date) }}</div>
                </div>

                <!-- Address Field -->
                <div class="form-group">
                    {{ form_label(form.adresse, 'Adresse') }}
                    <div class="input-icon">
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        <i class="fa fa-map-marker-alt icon"></i>
                    </div>
                    <div class="form-error">{{ form_errors(form.adresse) }}</div>
                </div>

                <!-- Domicile Selection (Dropdown) -->
                <div class="form-group">
                    {{ form_label(form.domicile, 'Rendez-vous √† domicile ?') }}
                    {{ form_widget(form.domicile, {'attr': {'class': 'form-control select2'}}) }}
                    <div class="form-error">{{ form_errors(form.domicile) }}</div>
                </div>

                <!-- Doctor Selection -->
                <div class="form-group">
                    {{ form_label(form.idmedecin, 'S√©lectionnez un m√©decin') }}
                    {{ form_widget(form.idmedecin, {'attr': {'class': 'form-control select2'}}) }}
                    <div class="form-error">{{ form_errors(form.idmedecin) }}</div>
                </div>

                <button type="submit" class="btn btn-primary">‚úî Enregistrer</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>

{# üé® CSS Styling #}
<style>
    /* üåü Center the form container */
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #e8f5e8; /* Light greenish background */
    }

    /* üé® Stylish white card */
    .card {
        background: #ffffff;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 450px;
        text-align: center;
        transition: 0.3s ease-in-out;
    }

    /* üèÜ Form Title */
    .form-title {
        font-size: 1.7rem;
        font-weight: bold;
        color: #2d6a4f;
        text-align: center;
        margin-bottom: 1.8rem;
    }

    /* üìå Form Input Fields */
    .form-group {
        margin-bottom: 1.5rem;
        text-align: left;
    }

    /* üé® Beautiful Input Fields with Icons */
    .input-icon {
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 2.5rem 0.75rem 1rem;
        border-radius: 8px;
        border: 2px solid #ccc;
        font-size: 1rem;
        background-color: #f8fff8;
        transition: all 0.3s ease-in-out;
    }

    /* üî¥ When Field is Invalid */
    .form-control.error {
        border-color: #e74c3c; /* Red */
        background-color: #fce4e4;
    }

    /* ‚úÖ When Field is Valid */
    .form-control.valid {
        border-color: #2ecc71; /* Green */
        background-color: #e8f5e8;
    }

    .icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #777;
    }

    /* ‚ùå Form Error Styling */
    .form-error {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 5px;
        text-align: left;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

    /* üìå Select2 Styling */
    .select2-container {
        width: 100% !important;
    }

    /* üíö Submit Button */
    .btn-primary {
        width: 100%;
        padding: 0.85rem;
        font-size: 1.1rem;
        border-radius: 8px;
        background-color: #4CAF50;
        border: none;
        color: white;
        transition: 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #388E3C;
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>

{# üõ† JavaScript for Field Validation (Red for Error, Green for Valid) #}
<script>
$(document).ready(function() {
    $('.date-picker').datepicker({
        dateFormat: 'yy-mm-dd',
        minDate: 0 // Prevent past dates
    });

    $('.date-picker').on('change', function() {
        if ($(this).val().trim() === '') {
            $(this).addClass('error');
        } else {
            $(this).removeClass('error');
        }
    });
});
    $(document).ready(function() {
        // üéØ Initialize the date picker
        $('.date-picker').datepicker({
            dateFormat: 'yy-mm-dd',
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true
        });

        // üéØ Initialize Select2 for better dropdowns
        $('.select2').select2();

        // üéØ Add live validation for fields
        $('.form-control').on('input', function() {
            if ($(this).val().trim() === '') {
                $(this).addClass('error').removeClass('valid');
            } else {
                $(this).addClass('valid').removeClass('error');
            }
        });
    });
</script>
