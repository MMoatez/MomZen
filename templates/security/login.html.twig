{% extends 'BaseFront.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>


form {
    background: white;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    width: 400px;
    text-align: center;
}

h1 {
    text-align: center;
    font-size: 2em;
    margin-bottom: 25px;
}

label {
    font-weight: bold;
    display: block;
    margin-top: 12px;
    text-align: left;
    font-size: 1.1em;
}

input[type="email"],
input[type="password"] {
    width: 100%;
    padding: 12px;
    margin-top: 6px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1.1em;
}

button {
    width: 100%;
    padding: 12px;
    margin-top: 18px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1.2em;
}

button:hover {
    background-color: #0056b3;
}

.alert {
    color: #721c24;
    background-color: #f8d7da;
    padding: 12px;
    border-radius: 6px;
    margin-bottom: 12px;
    text-align: center;
    font-size: 1.1em;
}

p {
    text-align: center;
    margin-top: 12px;
    font-size: 1.1em;
}

a {
    color: #007bff;
    text-decoration: none;
    font-size: 1.1em;
}

a:hover {
    text-decoration: underline;
}

/* Centering the form */
div[center] {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}


</style>


   <div center>
   
       <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

       
        

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
        <br>
        <br>
         <p>If you don't have an account yet, <a href="{{ path('app_register')}}">register here!</a></p>
                <p>If you forgot your password, <a href="forgotpassword.html">click here</a></p>   
                </p>
                </div>
    </form>
            
{% endblock %}
