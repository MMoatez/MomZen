
{% extends 'baseFront.html.twig' %}

{% block title %}Dossier Médical{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title">Dossier Médical</h1>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ analyse.id }}</td>
                        </tr>
                        <tr>
                            <th>Risque de grosses</th>
                            <td>{{ analyse.risqueGrosses }}</td>
                        </tr>
                       
                        <tr>
                            <th>Urgence Medicale</th>
                            <td>{{ analyse.Urgence_medicale }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="actions">
                                            <button onclick="window.history.back();" class="btn btn-light">Retour</button>

                    <a href="{{ path('app_analyse_edit', {'id': analyse.id}) }}" class="btn btn-warning">Modifier</a>
<form method="post" action="{{ path('app_analyse_delete', {'id': analyse.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <button class="btn">Delete</button>
</form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Style général de la page */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px;
        }

        .page-title {
            text-align: center;
            font-size: 32px;
            font-weight: 700;
            color: #333;
            margin-bottom: 30px;
        }

        .card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
            font-size: 16px;
            color: #555;
        }

        th {
            background-color: #2c3e50;
            color: white;
            padding: 12px;
            font-weight: bold;
        }

        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Carte Footer */
        .card-footer {
            padding: 15px;
            background-color: #f9f9f9;
            border-top: 1px solid #ddd;
        }

        /* Boutons d'action */
        .actions {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        .btn {
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-back {
            background-color: #3498db;
            color: white;
        }

        .btn-back:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

        .btn-edit {
            background-color: #f39c12;
            color: white;
        }

        .btn-edit:hover {
            background-color: #e67e22;
            transform: translateY(-2px);
        }

        /* Style pour le formulaire de suppression */
        .btn-delete {
            background-color: #e74c3c;
            color: white;
        }

        .btn-delete:hover {
            background-color: #c0392b;
        }
    </style>
{% endblock %}

