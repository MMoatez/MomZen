{% extends 'baseFront.html.twig' %}

{% block title %}New Analyse{% endblock %}

{% block body %}
    <h2 class="text-center mb-4">Modifier Analyse</h2>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-container'}}) }}

    <div class="form-group">
        {{ form_label(form.risqueGrosses) }}
        {{ form_widget(form.risqueGrosses, {'attr': {'class': 'form-control'}}) }}
        <div class="form-errors">
            {{ form_errors(form.risqueGrosses) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.urgence_medicale) }}
        {{ form_widget(form.urgence_medicale, {'attr': {'class': 'form-control'}}) }}
        <div class="form-errors">
            {{ form_errors(form.urgence_medicale) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.dossier_medicale) }}
        {{ form_widget(form.dossier_medicale, {'attr': {'class': 'form-control'}}) }}
        <div class="form-errors">
            {{ form_errors(form.dossier_medicale) }}
        </div>
    </div>

    <div style="display: flex; justify-content: space-between;">
        <div class="form-group">
                                            <button onclick="window.history.back();" class="btn btn-light">Retour</button>
        </div>
        <button type="submit" class="btn btn-primary">{{ button_label|default('Modifier') }}</button>
    </div>

    {{ form_end(form) }}

    <style>
        /* Style pour le formulaire */
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }

        .form-errors {
            color: red;
            font-size: 0.9em;
            margin-top: 5px;
        }

        .form-errors li {
            margin: 5px 0;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #4CAF50;
            color: white;
        }

        .btn-primary:hover {
            background-color: #45a049;
        }

        .btn-link {
            background: none;
            color: #007bff;
            text-decoration: none;
        }

        .btn-link:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
