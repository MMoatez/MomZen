{% extends 'BaseBack.html.twig' %}

{% block title %}Article Management{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center">
                            <h6 class="text-white text-capitalize ps-3 mb-0">Articles Management</h6>
                            <a href="{{ path('app_blog_new') }}" class="btn btn-sm btn-info me-3">Create New Article</a>
                        </div>
                    </div>
                    
                    <!-- Advanced Search Form -->
                    <div class="card-body pb-0">
                        <div class="card mb-3">
                            <div class="card-header p-3 d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Advanced Search</h6>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#searchCollapse" aria-expanded="false">
                                    <i class="material-icons text-sm">filter_list</i> Toggle Search
                                </button>
                            </div>
                            <div class="card-body p-3 collapse show" id="searchCollapse">
                                <form method="get" action="{{ path('app_blog_admin_index') }}" class="row g-3">
                                    <div class="col-md-3">
                                        <div class="input-group input-group-outline my-1">
                                            <label class="form-label">Title or Content</label>
                                            <input type="text" name="search" class="form-control" value="{{ app.request.query.get('search') }}">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group input-group-static my-1">
                                            <label>Status</label>
                                            <select name="status" class="form-control">
                                                <option value="">All Statuses</option>
                                                <option value="published" {% if app.request.query.get('status') == 'published' %}selected{% endif %}>Published</option>
                                                <option value="draft" {% if app.request.query.get('status') == 'draft' %}selected{% endif %}>Draft</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group input-group-static my-1">
                                            <label>Author</label>
                                            <select name="author" class="form-control">
                                                <option value="">All Authors</option>
                                                {% for author in authors|default([]) %}
                                                    <option value="{{ author.id }}" {% if app.request.query.get('author') == author.id %}selected{% endif %}>
                                                        {{ author.email }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group input-group-static my-1">
                                            <label>From date</label>
                                            <input type="date" name="date_from" class="form-control" value="{{ app.request.query.get('date_from') }}">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group input-group-static my-1">
                                            <label>To date</label>
                                            <input type="date" name="date_to" class="form-control" value="{{ app.request.query.get('date_to') }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6 d-flex align-items-center justify-content-end">
                                        <a href="{{ path('app_blog_admin_index') }}" class="btn btn-outline-secondary me-2">
                                            <i class="material-icons text-sm">refresh</i> Reset
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="material-icons text-sm">search</i> Search
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Title</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Created At</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Author</th>
                                        <th class="text-secondary opacity-7">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for article in articles %}
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                {% if article.image %}
                                                    <div class="me-3">
                                                        <img src="{{ asset('uploads/blog/' ~ article.image) }}" class="avatar avatar-sm border-radius-lg" alt="article image">
                                                    </div>
                                                {% endif %}
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">{{ article.title }}</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-sm bg-gradient-{{ article.status == 'published' ? 'success' : 'warning' }}">
                                                {{ article.status|capitalize }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-secondary text-xs font-weight-bold">{{ article.createdAt|date('Y-m-d H:i') }}</span>
                                        </td>
                                        <td>
                                            <span class="text-secondary text-xs font-weight-bold">{{ article.author.email }}</span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_blog_show', {'id': article.id}) }}" class="btn btn-link text-info px-3 mb-0">
                                                    <i class="material-icons text-sm me-2">visibility</i>View
                                                </a>
                                                <a href="{{ path('app_blog_edit', {'id': article.id}) }}" class="btn btn-link text-warning px-3 mb-0">
                                                    <i class="material-icons text-sm me-2">edit</i>Edit
                                                </a>
                                                <form method="post" action="{{ path('app_blog_delete', {'id': article.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure you want to delete this article?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                    <button class="btn btn-link text-danger px-3 mb-0">
                                                        <i class="material-icons text-sm me-2">delete</i>Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">No articles found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 