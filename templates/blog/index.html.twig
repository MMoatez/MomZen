{% extends 'BaseFront.html.twig' %}

{% block title %}Blog Articles{% endblock %}

{% block body %}
    <div class="page-section">
        <div class="container">
            <h1 class="text-center mb-5 wow fadeInUp">Latest Articles</h1>
            
            <!-- Advanced Search Form -->
            <div class="card mb-5 wow fadeInUp">
                <div class="card-body">
                    <h5 class="card-title mb-3">Advanced Search</h5>
                    <form method="get" action="{{ path('app_blog_index') }}" class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="search">Search by title or content</label>
                                <input type="text" name="search" id="search" class="form-control" value="{{ app.request.query.get('search') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="author">Author</label>
                                <select name="author" id="author" class="form-control">
                                    <option value="">All Authors</option>
                                    {% for author in authors|default([]) %}
                                        <option value="{{ author.id }}" {% if app.request.query.get('author') == author.id %}selected{% endif %}>
                                            {{ author.email }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="date_from">From date</label>
                                <input type="date" name="date_from" id="date_from" class="form-control" value="{{ app.request.query.get('date_from') }}">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="date_to">To date</label>
                                <input type="date" name="date_to" id="date_to" class="form-control" value="{{ app.request.query.get('date_to') }}">
                            </div>
                        </div>
                        <div class="col-12 text-end">
                            <a href="{{ path('app_blog_index') }}" class="btn btn-outline-secondary">Reset</a>
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row">
                {% for article in articles %}
                    <div class="col-lg-4 col-md-6 col-sm-12 py-3 wow fadeInUp">
                        <div class="card-blog">
                            {% if article.image %}
                                <div class="header">
                                    <div class="post-thumb">
                                        <img src="{{ asset('uploads/blog/' ~ article.image) }}" alt="{{ article.title }}">
                                    </div>
                                </div>
                            {% endif %}
                            <div class="body">
                                <h5 class="post-title">{{ article.title }}</h5>
                                <div class="site-info">
                                    <div class="avatar mr-2">
                                        <span class="mai-person"></span> {{ article.author.email }}
                                    </div>
                                    <span class="mai-time"></span> {{ article.createdAt|date('F j, Y') }}
                                </div>
                                <div class="post-content">
                                    {{ article.content|striptags|slice(0, 150) }}...
                                </div>
                                <a href="{{ path('app_blog_show', {'id': article.id}) }}" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            No articles published yet.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}