{% extends 'BaseFront.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Créer un compte</h2>

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    {{ form_start(registrationForm, {attr: {'class': 'needs-validation', 'novalidate': true}}) }}

                        <div class="mb-3">
                            {{ form_label(registrationForm.nom, "Nom", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.nom) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.prenom, "Prénom", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.prenom) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.email, "Email", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@gmail.com'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.password, "Mot de passe", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
                            {{ form_errors(registrationForm.password) }}
                          <!--  <small class="text-muted">Votre mot de passe doit contenir au moins 8 caractères, une majuscule, une minuscule et un chiffre.</small>   -->

                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.numTel, "Numéro de téléphone", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.numTel, {'attr': {'class': 'form-control', 'placeholder': '99 999 999'}}) }}
                            {{ form_errors(registrationForm.numTel) }}
                            <small class="text-muted">Le numéro doit contenir exactement 8 chiffres.</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.genre, "Genre", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.genre, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(registrationForm.genre) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.image, "Photo de profil", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.image, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.image) }}
                        </div>





                        <!-- Modal Bootstrap -->
                        <div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
