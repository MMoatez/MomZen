{% extends 'BaseBack.html.twig' %}

{% block title %}View Reclamation{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="text-white text-capitalize ps-3 mb-0">Reclamation Details</h6>
                                <div class="pe-3">
                                    <span class="badge bg-gradient-{{ reclamation.status == 'pending' ? 'warning' : 'success' }} me-2">
                                        {{ reclamation.status|capitalize }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body px-4">
                        <div class="row">
                            <div class="col-md-8">
                                {# Reclamation Details #}
                                <div class="mb-4">
                                    <h5 class="mb-3">{{ reclamation.title }}</h5>
                                    <p class="text-sm mb-2">
                                        <strong>Submitted by:</strong> {{ reclamation.user.email }}<br>
                                        <strong>Date:</strong> {{ reclamation.createdAt|date('F j, Y H:i') }}
                                    </p>
                                    <div class="border rounded p-3 bg-light">
                                        {{ reclamation.description|nl2br }}
                                    </div>
                                </div>

                                {# Responses Section #}
                                {% if reclamation.responses|length > 0 %}
                                    <div class="mt-4">
                                        <h5 class="mb-3">Responses</h5>
                                        {% for response in reclamation.responses %}
                                            <div class="card bg-gray-100 mb-3">
                                                <div class="card-body p-3">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <p class="text-sm mb-0">
                                                            <strong>Responded by:</strong> {{ response.admin.email }}<br>
                                                            <strong>Date:</strong> {{ response.createdAt|date('F j, Y H:i') }}
                                                        </p>
                                                        <div class="btn-group">
                                                            <a href="{{ path('app_response_edit', {'id': response.id}) }}" class="btn btn-sm btn-warning">
                                                                <i class="material-icons">edit</i> Edit
                                                            </a>
                                                            <form method="post" action="{{ path('app_response_delete', {'id': response.id}) }}" 
                                                                  onsubmit="return confirm('Are you sure you want to delete this response?');" 
                                                                  style="display: inline-block">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ response.id) }}">
                                                                <button class="btn btn-sm btn-danger">
                                                                    <i class="material-icons">delete</i> Delete
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <div class="mt-2">
                                                        {{ response.content|nl2br }}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                {% if reclamation.status == 'pending' %}
                                    <div class="mt-4">
                                        <a href="{{ path('app_response_new', {'id': reclamation.id}) }}" class="btn bg-gradient-primary">
                                            <i class="material-icons">reply</i> Respond to Reclamation
                                        </a>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-header pb-0">
                                        <h6>Actions</h6>
                                    </div>
                                    <div class="card-body">
                                        <a href="{{ path('app_reclamation_admin_index') }}" class="btn btn-info w-100 mb-2">
                                            <i class="material-icons text-sm">arrow_back</i> Back to List
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 