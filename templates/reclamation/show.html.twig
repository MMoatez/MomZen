{% extends 'BaseFront.html.twig' %}

{% block title %}Reclamation Details{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h3 class="mb-0">{{ reclamation.title }}</h3>
                                <span class="badge bg-gradient-{{ reclamation.status == 'pending' ? 'warning' : 'success' }}">
                                    {{ reclamation.status|capitalize }}
                                </span>
                            </div>

                            <div class="mb-4">
                                <p class="text-sm mb-2">
                                    <strong>Submitted:</strong> {{ reclamation.createdAt|date('F j, Y H:i') }}
                                </p>
                                <p class="mb-0">{{ reclamation.description }}</p>
                            </div>

                            {% if reclamation.responses is not empty %}
                                <div class="mb-4">
                                    <h4>Responses</h4>
                                    {% for response in reclamation.responses %}
                                        <div class="card bg-gray-100 mb-3">
                                            <div class="card-body p-3">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <p class="text-sm mb-0">
                                                        <strong>From:</strong> {{ response.admin.email }}
                                                    </p>
                                                    <small class="text-muted">{{ response.createdAt|date('F j, Y H:i') }}</small>
                                                </div>
                                                <p class="mb-0">{{ response.content }}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <div class="d-flex gap-2">
                                <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-primary">
                                    <span class="material-icons align-middle me-1">arrow_back</span> Back to List
                                </a>

                                {% if reclamation.status == 'pending' %}
                                    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-info">
                                        <span class="material-icons align-middle me-1">edit</span> Edit
                                    </a>

                                    <form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this reclamation?');" 
                                          style="display: inline-block">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                        <button class="btn btn-danger">
                                            <span class="material-icons align-middle me-1">delete</span> Delete
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
