{% extends 'baseFront.html.twig' %}

{% block title %}{{ forum.titre }} - Forum{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .forum-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .bot-comment {
            border-left: 4px solid #4CAF50;
            background-color: #f8fff8;
            position: relative;
            margin: 20px 0;
            box-shadow: 0 2px 8px rgba(76, 175, 80, 0.1);
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }

        .bot-badge {
            position: absolute;
            right: 15px;
            top: 15px;
            background: #4CAF50;
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.9rem;
        }

        .bot-message {
            color: #2e7d32;
            padding-right: 120px;
            font-size: 1rem;
            line-height: 1.6;
        }

        .comment-card {
            transition: transform 0.2s;
            margin-bottom: 1.5rem;
            border-radius: 8px;
        }

        .vote-section {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .vote-button {
            display: inline-flex;
            align-items: center;
            padding: 6px 12px;
            border-radius: 20px;
            border: 2px solid transparent;
            background: none;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .like-button {
            color: #28a745;
            border-color: #28a745;
        }

        .like-button:hover {
            background-color: rgba(40, 167, 69, 0.1);
        }

        .dislike-button {
            color: #dc3545;
            border-color: #dc3545;
        }

        .dislike-button:hover {
            background-color: rgba(220, 53, 69, 0.1);
        }

        .vote-button i {
            margin-right: 6px;
        }

        .forum-image {
            max-width: 300px;
            height: auto;
            margin-bottom: 20px;
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="forum-container">
    <!-- Carte principale du forum -->
    <div class="card shadow-lg mb-5">
        <div class="card-body">
            <h1 class="display-5 mb-4">{{ forum.titre }}</h1>

            <!-- Commentaire du bot en premier -->
            {% for commentaire in forum.commentaires|filter(c => c.contenu starts with 'ðŸ¤–') %}
                <div class="bot-comment">
                    <div class="card-body">
                        <div class="bot-badge">
                            <i class="fas fa-robot"></i> Assistant IA
                        </div>
                        <p class="bot-message">{{ commentaire.contenu }}</p>
                    </div>
                </div>
            {% endfor %}

            {% if forum.image %}
                <img src="{{ asset('uploads/' ~ forum.image) }}" 
                     class="forum-image" 
                     alt="Image du forum">
            {% endif %}

            <div class="forum-content mb-4">
                {{ forum.contenu|nl2br }}
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="fas fa-clock"></i> 
                    {{ forum.datePublication|date('d/m/Y Ã  H:i') }}
                </small>
                <div class="btn-group">
                    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" 
                       class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Section des commentaires (sans les commentaires bots) -->
    <h3 class="mb-4">
        <i class="fas fa-comments"></i> 
        Commentaires ({{ forum.commentaires|length }})
    </h3>

    {% if forum.commentaires|filter(c => not (c.contenu starts with 'ðŸ¤–')) is not empty %}
        {% for commentaire in forum.commentaires|filter(c => not (c.contenu starts with 'ðŸ¤–'))|sort((a, b) => b.likes <=> a.likes) %}
            <div class="card comment-card">
                <div class="card-body">
                    <p class="mb-3">{{ commentaire.contenu }}</p>

                    <div class="d-flex justify-content-between align-items-center">
                        <small class="comment-date">
                            <i class="fas fa-clock"></i> 
                            {{ commentaire.datePublication|date('d/m/Y H:i') }}
                        </small>
                        
                        <div class="vote-section">
                            <form method="post" action="{{ path('app_commentaire_like', {'id': commentaire.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('like' ~ commentaire.id) }}">
                                <button type="submit" class="vote-button like-button">
                                    <i class="fas fa-thumbs-up"></i>
                                    <span>{{ commentaire.likes }}</span>
                                </button>
                            </form>

                            <form method="post" action="{{ path('app_commentaire_dislike', {'id': commentaire.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('dislike' ~ commentaire.id) }}">
                                <button type="submit" class="vote-button dislike-button">
                                    <i class="fas fa-thumbs-down"></i>
                                    <span>{{ commentaire.dislikes }}</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> 
            Aucun commentaire pour le moment.
        </div>
    {% endif %}

    <!-- Formulaire d'ajout de commentaire -->
    <div class="card shadow mt-5">
        <div class="card-body">
            <h4 class="mb-4"><i class="fas fa-comment-medical"></i> Ajouter un commentaire</h4>
            {{ form_start(commentaire_form) }}
                <div class="mb-3">
                    {{ form_widget(commentaire_form.contenu, {
                        'attr': {
                            'class': 'form-control',
                            'rows': 4,
                            'placeholder': 'Ã‰crivez votre commentaire...'
                        }
                    }) }}
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i> Publier
                </button>
            {{ form_end(commentaire_form) }}
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_forum_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i> Retour Ã  la liste
        </a>
    </div>
</div>
{% endblock %}