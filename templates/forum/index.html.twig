{% extends 'basefront.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block body %}
 <style>
        /* styles.css (intégré dans le même fichier) */

        /* Style général pour le formulaire */
        form {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Style des labels */
        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        /* Style des champs de saisie */
        input[type="text"],
        input[type="email"],
        input[type="password"],
        textarea,
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        .comment-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .vote-section {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .vote-button {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 8px 16px;
            border-radius: 20px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
            font-weight: 500;
        }

        .like-button {
            background-color: #e8f5e9;
            color: #2e7d32;
        }

        .like-button:hover {
            background-color: #c8e6c9;
            transform: scale(1.05);
        }

        .like-button.active {
            background-color: #2e7d32;
            color: white;
        }

        .dislike-button {
            background-color: #ffebee;
            color: #c62828;
        }

        .dislike-button:hover {
            background-color: #ffcdd2;
            transform: scale(1.05);
        }

        .dislike-button.active {
            background-color: #c62828;
            color: white;
        }

        .vote-button i {
            margin-right: 8px;
        }

        .comment-date {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .forum-image {
            max-width: 50%;
            height: auto;
            margin-bottom: 20px;
            border-radius: 8px;
        }
    </style>

<div class="forum-container">
    <h1 class="text-center mb-5 display-4">Discussions du Forum</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_forum_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Créer nouveau
        </a>
        
        <a href="{{ path('app_forum_export_pdf') }}" class="btn btn-danger">
            <i class="fas fa-file-pdf me-2"></i>Exporter PDF
        </a>
    </div>

    <div class="search-sort-container">
        <form method="get" class="flex-grow-1">
            <div class="input-group rounded-pill shadow">
                <input type="text" 
                       name="q" 
                       class="form-control border-end-0 rounded-start-pill" 
                       placeholder="Rechercher par titre..."
                       value="{{ search_query }}">
                <button type="submit" class="btn btn-primary rounded-end-pill px-4">
                    <i class="fas fa-search me-2"></i>
                    Rechercher
                </button>
            </div>
        </form>

        <a href="{{ path('app_forum_index', {sort: current_sort == 'date_asc' ? 'date_desc' : 'date_asc'}) }}" 
           class="btn btn-outline-primary sort-btn rounded-pill">
            <i class="fas fa-sort me-2"></i>
            {{ current_sort == 'date_asc' ? 'Plus anciens' : 'Plus récents' }}
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Image</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for forum in forums %}
                <tr>
                    <td>{{ forum.id }}</td>
                    <td>{{ forum.titre }}</td>
                    <td>{{ forum.contenu|slice(0, 50) }}...</td>
                    <td>
                        {% if forum.image %}
                <img src="{{ asset('uploads/' ~ forum.image) }}" 
                     class="forum-image" 
                     alt="Image du forum">
                        {% else %}
                            <span class="text-muted fst-italic">Aucune image</span>
                        {% endif %}
                    </td>
                    <td>{{ forum.datePublication|date('d/m/Y H:i') }}</td>
                    <td>
                    <a href="{{ path('app_forum_show', {'id': forum.id}) }}">show</a>
                    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}">edit</a>
                </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">Aucune discussion trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}