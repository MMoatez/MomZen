{% extends 'base.html.twig' %}

{% block title %}Cr√©er un Dossier M√©dical{% endblock %}

{% block body %}
<div class="container">
    <h1 class="title">üìÅ Dossier M√©dical</h1>

    <div class="form-container">
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="form-group">
                    {{ form_label(form.historique, 'Historique M√©dical') }}
                    <div class="input-icon">
                        {{ form_widget(form.historique, {'attr': {'class': 'form-control'}}) }}
                        <i class="fa fa-notes-medical icon"></i>
                    </div>
                    <div class="form-error">{{ form_errors(form.historique) }}</div>
                </div>

                <button class="btn btn-primary">‚úî Enregistrer</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{# üé® CSS Styling #}
<style>
    /* üåü Center the form container */
    .container {
        max-width: 700px;
        margin: auto;
        padding: 20px;
    }

    .title {
        font-size: 2rem;
        font-weight: bold;
        color: #2d6a4f;
        text-align: center;
        margin-bottom: 1.8rem;
    }

    /* üé® Stylish Form Card */
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        background-color: #e8f5e8;
    }

    .card {
        background: #ffffff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        transition: 0.3s ease-in-out;
    }

    /* üìå Form Input Fields */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        border: 2px solid #ccc;
        font-size: 1rem;
        background-color: #f8fff8;
        transition: all 0.3s ease-in-out;
    }

    /* üî¥ When Field is Invalid */
    .form-control.error {
        border-color: #e74c3c;
        background-color: #fce4e4;
    }

    /* ‚úÖ When Field is Valid */
    .form-control.valid {
        border-color: #2ecc71;
        background-color: #e8f5e8;
    }

    .form-error {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 5px;
        font-weight: bold;
    }

    /* üíö Submit Button */
    .btn-primary {
        width: 100%;
        padding: 0.85rem;
        font-size: 1.1rem;
        border-radius: 8px;
        background-color: #4CAF50;
        border: none;
        color: white;
        transition: 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #388E3C;
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>

{# üõ† JavaScript for Field Validation #}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('.form-control').addEventListener('input', function () {
            if (this.value.trim() === '') {
                this.classList.add('error');
                this.classList.remove('valid');
            } else {
                this.classList.add('valid');
                this.classList.remove('error');
            }
        });
    });
</script>

{% endblock %}
