{# templates/demande_ambulance/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Demandes d'Ambulance{% endblock %}

{% block body %}
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Demandes</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>ðŸ“‹ Liste des Demandes</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_demande_ambulance_new') }}" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Nouvelle Demande
                </a>
            {% endif %}
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Patient</th>
                                <th>Ambulance</th>
                                <th>Statut</th>
                                <th>Date CrÃ©ation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for demande in demande_ambulances %}
                                <tr>
                                    <td>{{ demande.id }}</td>
                                    <td>
                                        {{ demande.user.nom }} {{ demande.user.prenom }}
                                        <br>
                                        <small class="text-muted">{{ demande.user.email }}</small>
                                    </td>
                                    <td>
                                        {{ demande.ambulance.immatriculation }}
                                        <br>
                                        <small class="text-muted">{{ demande.ambulance.modele }}</small>
                                    </td>
                                    <td>
                                        <span class="badge 
                                            {% if demande.statut == 'confirmÃ©e' %}bg-success
                                            {% elseif demande.statut == 'annulÃ©e' %}bg-danger
                                            {% else %}bg-warning text-dark
                                            {% endif %}">
                                            {{ demande.statut|replace({'_': ' '})|capitalize }}
                                        </span>
                                    </td>
                                    <td>{{ demande.dateCreation|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <a href="{{ path('app_demande_ambulance_show', {'id': demande.id}) }}" 
                                           class="btn btn-sm btn-info" 
                                           title="Voir dÃ©tails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('app_demande_ambulance_edit', {'id': demande.id}) }}" 
                                               class="btn btn-sm btn-primary"
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_demande_ambulance_delete', {'id': demande.id}) }}" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cette demande ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
                                                <button class="btn btn-sm btn-danger" title="Supprimer">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="fas fa-exclamation-circle fa-2x mb-3"></i><br>
                                        Aucune demande trouvÃ©e
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="mt-4">
                        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour au Dashboard
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Confirmation avant suppression
        document.querySelectorAll('.delete-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cette demande ?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
{% endblock %}