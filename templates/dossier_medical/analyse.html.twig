{% extends 'baseFront.html.twig' %}

{% block title %}Analyse Médicale 
{% block stylesheets %}
 
    <style>
    .table {
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        .badge {
            padding: 0.5em 0.75em;
            font-size: 0.9em;
            border-radius: 20px;
        }
        .bg-danger { background: #dc3545; }
        .bg-warning { background: #ffc107; color: #000; }
        .bg-success { background: #28a745; }
        .analysis-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 20px;
        }

        .analysis-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 25px;
        }

        .patient-info {
            margin-bottom: 2rem;
            border-bottom: 1px solid #eee;
            padding-bottom: 1rem;
        }

        .analysis-results {
            margin: 2rem 0;
        }

        .result-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding: 1rem;
            border-radius: 8px;
            background: #f8f9fa;
        }

        .result-label {
            font-weight: 600;
            color: #2c3e50;
        }

        .result-value {
            font-weight: 700;
            padding: 5px 15px;
            border-radius: 20px;
        }

        .risque-elevé-dépassement-de-terme {
            background: #ff6b6b;
            color: white;
        }

        .risque-modéré-troisième-trimestre {
            background: #f4d03f;
            color: #2c3e50;
        }

        .risque-normal {
            background: #2ecc71;
            color: white;
        }

        .urgency-yes {
            background: #e74c3c;
            color: white;
        }

        .urgency-no {
            background: #27ae60;
            color: white;
        }

        .analysis-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn-edit {
            background: #3498db;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-back {
            background: #95a5a6;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }
    </style>
    {% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Analyse du dossier médical</h1>

        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                Détails du dossier
            </div>
            <div class="card-body">
                <p><strong>Patient :</strong> {{ dossier_medical.patient.nom }}</p>
                <p><strong>Semaines de grossesse :</strong> {{ dossier_medical.grossesSemaine }}</p>
                <p><strong>Symptômes :</strong> {{ dossier_medical.symptotes }}</p>
            </div>
        </div>

        <table class="table table-hover mt-4">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Risque grossesse</th>
                    <th>Urgence médicale</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for analyse in analyses %}
                <tr>
                    <td>{{ analyse.id }}</td>
                    <td>
                        <span class="badge 
                            {% if analyse.risqueGrosses == 'Risque élevé' %}bg-danger
                            {% elseif analyse.risqueGrosses == 'Risque modéré' %}bg-warning
                            {% else %}bg-success{% endif %}">
                            {{ analyse.risqueGrosses }}
                        </span>
                    </td>
                    <td>
                        <span class="badge {% if analyse.urgenceMedicale %}bg-danger{% else %}bg-success{% endif %}">
                            {{ analyse.urgenceMedicale ? 'OUI' : 'NON' }}
                        </span>
                    </td>
                    <td>
                        <a href="{{ path('app_analyse_show', {'id': analyse.id}) }}" class="text-primary me-2">Voir</a>
                        <a href="{{ path('app_analyse_edit', {'id': analyse.id}) }}" class="text-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucune analyse disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_dossier_medical_index') }}" class="btn btn-outline-secondary">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
{% endblock %}