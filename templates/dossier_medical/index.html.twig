{% extends 'baseFront.html.twig' %}

{% block title %}Dossier Médical - Index{% endblock %}

{% block body %}
<style>
        /* styles.css (intégré dans le même fichier) */

        /* Style général pour le formulaire */
        form {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Style des labels */
        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        /* Style des champs de saisie */
        input[type="text"],
        input[type="email"],
        input[type="password"],
        textarea,
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        /* Effet focus sur les champs */
        input:focus,
        textarea:focus,
        select:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
        }

        /* Bouton de mise à jour */
        button {
            background: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

        /* Effet hover sur le bouton */
        button:hover {
            background: #0056b3;
        }

        /* Bouton de suppression */
        form[action*="delete"] button {
            background: #dc3545;
        }

        /* Effet hover pour le bouton de suppression */
        form[action*="delete"] button:hover {
            background: #b02a37;
        }

        /* Centrer le titre */
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
    <h1 class="page-title">Dossier Médical</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Date de Création</th>
                    <th>Grossesse (semaine)</th>
                    <th>Symptômes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for dossier_medical in dossier_medicals %}
                <tr>
                    <td>{{ dossier_medical.patient.nom }}</td>
                    <td>{{ dossier_medical.datecreation ? dossier_medical.datecreation|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ dossier_medical.grossesSemaine }}</td>
                    <td>{{ dossier_medical.symptotes }}</td>
                    <td class="actions">
                        <a href="{{ path('app_dossier_medical_show', {'id': dossier_medical.id}) }}" class="btn btn-show">Show</a>
                        <a href="{{ path('app_dossier_medical_edit', {'id': dossier_medical.id}) }}" class="btn btn-edit">Edit</a>
                        <a href="{{ path('app_dossier_medical_analyse', {'id': dossier_medical.id}) }}" class="btn btn-analyse">Analyse</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_dossier_medical_new') }}" class="btn btn-create">Create New</a>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles généraux pour la page */
        body {
            background-color: #f4f7fa;
            font-family: 'Arial', sans-serif;
        }

        .page-title {
            text-align: center;
            margin-bottom: 30px;
            font-size: 32px;
            font-weight: bold;
            color: #333;
        }

        .table-container {
            width: 80%;
            max-width: 1200px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 16px;
            color: #555;
        }

        thead {
            background-color: #2c3e50;
            color: white;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .actions {
            display: flex;
            gap: 15px;
        }

        /* Boutons d'action */
        .btn {
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            display: inline-block;
        }

        .btn-show {
            background-color: #3498db;
            color: white;
        }

        .btn-show:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

        .btn-edit {
            background-color: #f39c12;
            color: white;
        }

        .btn-edit:hover {
            background-color: #e67e22;
            transform: translateY(-2px);
        }

        .btn-analyse {
            background-color: #9b59b6;
            color: white;
        }

        .btn-analyse:hover {
            background-color: #8e44ad;
            transform: translateY(-2px);
        }

        .btn-create {
            display: block;
            text-align: center;
            background-color: #27ae60;
            color: white;
            padding: 12px 25px;
            border-radius: 8px;
            margin: 40px auto;
            font-size: 18px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-create:hover {
            background-color: #2ecc71;
            transform: translateY(-3px);
        }

        /* Style pour les cellules vides */
        td[colspan="5"] {
            text-align: center;
            font-style: italic;
            color: #999;
        }

        /* Responsivité pour les petits écrans */
        @media (max-width: 768px) {
            .table-container {
                width: 95%;
                padding: 20px;
            }

            .btn-create {
                font-size: 16px;
                padding: 10px 20px;
            }

            .btn {
                padding: 6px 12px;
                font-size: 12px;
            }

            th, td {
                padding: 10px;
            }
        }
    </style>
{% endblock %}
