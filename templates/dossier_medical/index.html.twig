{% extends 'baseFront.html.twig' %}

{% block title %}Dossier Médical - Index{% endblock %}

{% block body %}
    <h1 class="page-title">Dossier Médical</h1>

    {# Formulaire de recherche amélioré #}
    <div class="search-container mb-4">
        <form method="get" action="{{ path('app_dossier_medical_index') }}" class="row g-3">
            <div class="col-md-8">
                <input type="text" 
                       name="search" 
                       class="form-control" 
                       placeholder="Rechercher par patient ou symptômes..."
                       value="{{ app.request.query.get('search') }}">
            </div>
            
            

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> rechercher
                </button>
            </div>
        </form>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>
                        <a href="{{ path('app_dossier_medical_index', {'sort': 'datecreation', 'direction': (app.request.get('direction') == 'asc') ? 'desc' : 'asc'}) }}">
                            Date de Création
                            {% if app.request.get('sort') == 'datecreation' %}
                                {{ app.request.get('direction') == 'asc' ? '↑' : '↓' }}
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('app_dossier_medical_index', {'sort': 'grosses_semaine', 'direction': (app.request.get('direction') == 'asc') ? 'desc' : 'asc'}) }}">
                            Grossesse (semaine)
                            {% if app.request.get('sort') == 'grosses_semaine' %}
                                {{ app.request.get('direction') == 'asc' ? '↑' : '↓' }}
                            {% endif %}
                        </a>
                    </th>
                    <th>Symptômes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for dossier_medical in dossier_medicals %}
                <tr>
                    <td>{{ dossier_medical.patient.nom }}</td>
                    <td>{{ dossier_medical.datecreation|date('Y-m-d H:i') }}</td>
                    <td>{{ dossier_medical.grossesSemaine }}</td>
                    <td>{{ dossier_medical.symptotes }}</td>
                    <td class="actions">
                        <a href="{{ path('app_dossier_medical_show', {'id': dossier_medical.id}) }}" class="btn btn-show">Show</a>
                        <a href="{{ path('app_dossier_medical_edit', {'id': dossier_medical.id}) }}" class="btn btn-edit">Edit</a>
                        <a href="{{ path('app_dossier_medical_analyse', {'id': dossier_medical.id}) }}" class="btn btn-analyse">Analyse</a>
                        <a href="{{ path('app_dossier_medical_pdf', {'id': dossier_medical.id}) }}" class="btn btn-pdf">PDF</a>
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun dossier trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_dossier_medical_new') }}" class="btn btn-create">Créer nouveau dossier</a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles unifiés */
        .search-container {
            max-width: 1200px;
            margin: 0 auto 30px;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            min-width: 800px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        .btn-pdf {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

        .btn-pdf:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }

        @media (max-width: 768px) {
            .search-container {
                padding: 15px;
            }
            
            .btn {
                padding: 5px 8px;
                font-size: 0.8rem;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}