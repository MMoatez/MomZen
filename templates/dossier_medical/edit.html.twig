{% extends 'baseFront.html.twig' %}

{% block title %}Edit DossierMedical{% endblock %}

{% block body %}
<style>
        /* styles.css (intégré dans le même fichier) */

        /* Style général pour le formulaire */
        form {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Style des labels */
        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        /* Style des champs de saisie */
        input[type="text"],
        input[type="email"],
        input[type="password"],
        textarea,
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        /* Effet focus sur les champs */
        input:focus,
        textarea:focus,
        select:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
        }

        /* Bouton de mise à jour */
        button {
            background: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

        /* Effet hover sur le bouton */
        button:hover {
            background: #0056b3;
        }

        /* Bouton de suppression */
        form[action*="delete"] button {
            background: #dc3545;
        }

        /* Effet hover pour le bouton de suppression */
        form[action*="delete"] button:hover {
            background: #b02a37;
        }

        /* Centrer le titre */
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
                    <h2 class="text-center mb-4">Modifier DossierMedical</h2>

{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-container'}}) }}

    <div class="form-group">
        {{ form_label(form.grosses_semaine) }}
        {{ form_widget(form.grosses_semaine, {'attr': {'class': 'form-control'}}) }}
        <div class="form-errors">
            {{ form_errors(form.grosses_semaine) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.symptotes) }}
        {{ form_widget(form.symptotes, {'attr': {'class': 'form-control'}}) }}
        <div class="form-errors">
            {{ form_errors(form.symptotes) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.patient) }}
        {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
        <div class="form-errors">
            {{ form_errors(form.patient) }}
        </div>
    </div>

  <div style="display: flex; justify-content: space-between;">
    <div class="form-group">
                <button type="back" class="btn btn-light">    <a href="{{ path('app_dossier_medical_index') }}">back to list</a>

    </div>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Modifier') }}</button>

</button>


  </div>
    {{ form_end(form) }}
     <style>
