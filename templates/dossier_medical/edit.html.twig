        }

        .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }

        .form-errors {
            color: red;
            font-size: 0.9em;
            margin-top: 5px;
        }

        .form-errors li {
            margin: 5px 0;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #4CAF50;
