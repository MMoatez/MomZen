{% extends 'baseFront.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <!-- Formulaire dans un cadre -->
        <div class="form-container p-5 shadow-lg rounded" style="max-width: 600px; width: 100%; background-color: #ffffff; border: 2px solid #007bff; box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);">
            <h2 class="text-center mb-4 text-primary">Enregistrer une Ambulance</h2>

            {{ form_start(form, {'attr': {'class': 'form-custom'}}) }}
                <div class="mb-3">
                    {{ form_row(form.immatriculation, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.marque, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.modele, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.chauffeur, {'attr': {'class': 'form-select form-select-lg'}}) }}
                </div>
                <div class="text-center">
                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary btn-lg mt-4'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
