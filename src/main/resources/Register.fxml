<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Register"
            prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: #f4f4f9;">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50.0" AnchorPane.rightAnchor="50.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.bottomAnchor="50.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Register New User" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <GridPane hgap="10" vgap="15" alignment="CENTER">
            <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="emailField" promptText="Enter email" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       prefWidth="300" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ccc;"/>

            <Label text="Role:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <ComboBox fx:id="roleComboBox" promptText="Select role" GridPane.rowIndex="1" GridPane.columnIndex="1"
                      prefWidth="300" style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

            <Label text="Nom:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="nomField" promptText="Enter last name" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       prefWidth="300" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ccc;"/>

            <Label text="PrÃ©nom:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="prenomField" promptText="Enter first name" GridPane.rowIndex="3" GridPane.columnIndex="1"
                       prefWidth="300" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ccc;"/>

            <Label text="Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.rowIndex="4" GridPane.columnIndex="1"
                           prefWidth="300" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ccc;"/>

            <Label text="Num Tel:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="numTelField" promptText="Enter phone number" GridPane.rowIndex="5" GridPane.columnIndex="1"
                       prefWidth="300" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ccc;"/>

            <Label text="Genre:" GridPane.rowIndex="6" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <ComboBox fx:id="genreComboBox" promptText="Select gender" GridPane.rowIndex="6" GridPane.columnIndex="1"
                      prefWidth="300" style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

            <Label text="Image:" GridPane.rowIndex="7" GridPane.columnIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <HBox spacing="10" GridPane.rowIndex="7" GridPane.columnIndex="1">
                <TextField fx:id="imageField" promptText="Image path"
                           prefWidth="200" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ccc;"
                           editable="false"/>
                <Button fx:id="uploadButton" text="Upload" onAction="#handleImageUpload"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;"/>
            </HBox>

            <ImageView fx:id="imagePreview" fitWidth="100" fitHeight="100" preserveRatio="true"
                       GridPane.rowIndex="8" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="registerButton" text="Register"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                    prefWidth="100" onAction="#handleRegister"/>
            <Button fx:id="cancelButton" text="Cancel"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                    prefWidth="100" onAction="#handleCancel"/>
        </HBox>

        <Label fx:id="statusLabel" text="" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px;"/>
    </VBox>
</AnchorPane>